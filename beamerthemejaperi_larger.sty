\mode<presentation>

\useinnertheme{default}
\usefonttheme{serif}
\usepackage{ifthen}


\setbeamerfont{title like}{shape=\scshape}
\setbeamerfont{frametitle}{shape=\scshape}
\setbeamerfont{section in head/foot}{shape=\scshape,size=\Huge}
\setbeamerfont{subsection in head/foot}{shape=\scshape,size=\Huge}
\setbeamerfont{page number}{shape=\scshape,size=\Huge}



\setbeamertemplate{navigation symbols}{} % hide bottom nav buttons
\setbeamercovered{transparent} % don't hide strip-teased bullet points

\definecolor{barcolor}{HTML}{77C4D3} % teal
\setbeamercolor{lower separation line head}{bg=barcolor} 
\setbeamercolor{lower separation line foot}{bg=barcolor} 
\setbeamercolor{normal text}{fg=black,bg=white} 
\setbeamercolor{alerted text}{fg=red} 
\setbeamercolor{example text}{fg=black} 
\setbeamercolor{structure}{fg=black} 
\setbeamercolor{page number}{bg=black!10}

\setbeamercolor{palette tertiary}{fg=black,bg=black!10} 
\setbeamercolor{palette quaternary}{fg=black,bg=black!10} 
%Display current section (left), subsection (center) and current/total slide number (right) at headline
%If subsection has not been specified, will display section in the central heading
%With this, subsections could be used instead of frametitles
\setbeamertemplate{headline}
{%
	\leavevmode%
	\ifthenelse{\not\equal{\insertsubsectionhead}{}}{%
		\begin{beamercolorbox}[wd=.333\paperwidth,ht=5ex,dp=2ex]{section in head/foot}%
			\hbox to .333\paperwidth{\hfil\large\insertsectionhead\hfil}%
		\end{beamercolorbox}%
		\begin{beamercolorbox}[wd=.333\paperwidth,ht=5ex,dp=2ex]{subsection in head/foot}%
			\hbox to .333\paperwidth{\hfil\large\textbf{\insertsubsectionhead}\hfil}
		\end{beamercolorbox}%
}%
{%
		\begin{beamercolorbox}[wd=.333\paperwidth,ht=5ex,left,dp=2ex]{section in head/foot}%
			\hbox to .333\paperwidth{\hfil\hfil}%
		\end{beamercolorbox}%
		\begin{beamercolorbox}[wd=.333\paperwidth,ht=5ex,dp=2ex]{subsection in head/foot}%
			\hbox to .333\paperwidth{\hfil\large\textbf{\insertsectionhead}\hfil}
		\end{beamercolorbox}%
	}%
	\ifnum\c@framenumber=1%
	\begin{beamercolorbox}[wd=0.333\paperwidth,ht=5ex,right,dp=2ex]{page number}%
		\hbox to .333\paperwidth{\hfil\hfil}%
	\end{beamercolorbox}%
	\else%
	\begin{beamercolorbox}[wd=0.333\paperwidth,ht=5ex,right,dp=2ex]{page number}%
		\hbox to .333\paperwidth{\hfil\large\insertframenumber/\large\inserttotalframenumber\hfil}%
	\end{beamercolorbox}%
	\fi%
}%

%set colored footline
\setbeamertemplate{footline}
{%
	\begin{beamercolorbox}[colsep=1.25pt]{lower separation line foot}
	\end{beamercolorbox}
}

